<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MyApplicacion.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Image
                Aspect="AspectFit"
                HeightRequest="185"
                SemanticProperties.Description="dot net bot in a race car number eight"
                Source="dotnet_bot.png" />

            <Button
                x:Name="BtnProduccion"
                Clicked="Produccion_click"
                HorizontalOptions="Center"
                Text="Produccion" />

            <Button
                x:Name="BtnAlmacen"
                Clicked="Almacen_click"
                HorizontalOptions="Center"
                Text="Almacen" />
            <Button
                x:Name=" BtnDb"
                Clicked="Db_click"
                HorizontalOptions="End"
                Text="Database"
                VerticalOptions="End" />


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
