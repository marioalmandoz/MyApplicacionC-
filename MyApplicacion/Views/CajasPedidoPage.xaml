<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ProduccionAlmacen.Views.PedidoCajasPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="PedidoCajasPage">
    <StackLayout Padding="10" VerticalOptions="StartAndExpand">
        <Button
            x:Name="BtnBack"
            Margin="0,0,0,10"
            Clicked="Go_Back"
            FontSize="Small"
            HorizontalOptions="Start"
            Text="Back"
            VerticalOptions="Start" />
        <Label
            Margin="0,20,0,10"
            FontSize="Large"
            HorizontalOptions="Center"
            Text="¡INTRODUCE EL NUMERO TOTAL DE PIEZAS A RETIRAR!" />

        <Entry
            x:Name="numeroPiezasEntry"
            HorizontalOptions="Center"
            Keyboard="Numeric"
            Placeholder="Número de piezas..." />

        <Button
            Margin="0,10,0,0"
            Clicked="Validar_Clicked"
            HorizontalOptions="Center"
            Text="Validar" />
    </StackLayout>
</ContentPage>