<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ProduccionAlmacen.Views.PedidoCajasPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="PEDIDO-CAJAS">
    <StackLayout Padding="10" VerticalOptions="StartAndExpand">
        <HorizontalStackLayout>
            <ImageButton
                BackgroundColor="Transparent"
                Clicked="Go_Back"
                HeightRequest="30"
                HorizontalOptions="Start"
                Source="flecha_atras.png"
                WidthRequest="30" />
            <Image
                Margin="100,0,0,0"
                BackgroundColor="Transparent"
                HeightRequest="50"
                Source="logo_bruss_blanco" />
        </HorizontalStackLayout>
        <Label
            Margin="0,20,0,10"
            FontSize="Large"
            HorizontalOptions="Center"
            Text="¡INTRODUCE EL NUMERO TOTAL DE PIEZAS A RETIRAR!" />

        <Entry
            x:Name="numeroPiezasEntry"
            HorizontalOptions="Center"
            Keyboard="Numeric"
            Placeholder="Número de piezas..." />

        <Button
            Margin="0,10,0,0"
            Clicked="Validar_Clicked"
            HorizontalOptions="Center"
            Text="Validar" />
    </StackLayout>
</ContentPage>