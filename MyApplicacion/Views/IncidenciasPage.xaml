<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MyApplicacion.Views.IncidenciasPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="IncidenciasPage">

    <Grid>
        <!--  Encabezado  -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <HorizontalStackLayout>
            <ImageButton
                BackgroundColor="Transparent"
                Clicked="Go_Back"
                HeightRequest="30"
                HorizontalOptions="Start"
                Source="flecha_atras.png"
                WidthRequest="30" />
            <Image
                Margin="100,0,0,0"
                BackgroundColor="Transparent"
                HeightRequest="50"
                Source="logo_bruss_blanco" />
        </HorizontalStackLayout>

        <!--  Contenido  -->
        <StackLayout Grid.Row="1" Padding="20">
            <Label FontSize="25" Text="Seleccione el tipo de incidencia:" />
            <!--  Agrega tu DropDownList aquí  -->
            <Picker x:Name="ddlIncidencias" />
            <!--  Botones de validación y cancelación  -->
            <StackLayout Margin="5,90" Orientation="Horizontal">
                <Button
                    Margin="0,10,5,0"
                    BackgroundColor="LightGray"
                    Clicked="BtnCancelar_Clicked"
                    CornerRadius="30"
                    FontAttributes="Bold"
                    FontSize="30"
                    HorizontalOptions="Center"
                    Text="CANCELAR"
                    TextColor="Black" />
                <Button
                    Margin="5,10,10,0"
                    BackgroundColor="LightGray"
                    Clicked="BtnValidar_Clicked"
                    CornerRadius="30"
                    FontAttributes="Bold"
                    FontSize="30"
                    HorizontalOptions="Center"
                    Text="VALIDAR"
                    TextColor="Black" />
            </StackLayout>
        </StackLayout>
    </Grid>
</ContentPage>
